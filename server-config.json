{
    "activeMode": "dev",
    "dev": {
        "NodeServer": {
            "applicationFileFolder": "./dist",
            "cacheControlStrategy": {
                "static": "no-cache, private",
                "api": "no-cache, private"
            },
            "defaultClientContentPath": "index.html",
            "importMap": "./dist/import-map.json",
            "port": 3000,
            "staticContentMaxAge": 0,
            "staticFolderMapping": {
                "/demo": "./demo",
                "/css": "./dist/css",
                "/src": "./src"
            }
        },
        "LitElementTester": {
            "instrumentedFiles": ["dist/components/*.js"],
            "testClientContentPath": "test/runner.html",
            "disableLogging": true
        }
    }
}
