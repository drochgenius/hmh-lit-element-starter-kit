{
    "name": "@hmh-cam/my-component",
    "version": "0.0.1",
    "description": "My Component",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf package-lock.json node_modules/ dist/",
        "start": "nodejs-base-server -Msc server-config.json",
        "map": "nodejs-base-server -Mc server-config.json",
        "build": "tsc -p src",
        "lint": "prettier 'src/**/*.ts' --write; eslint 'src/**/*.ts' --fix",
        "prepubishOnly": "npm run build",
        "watch": "npm run build; concurrently --names 'build, doc ' -c 'bgBlue,bgMagenta' 'npm run build -- -w' 'npm-watch'",
        "test-help": "lit-element-tester -V",
        "test": "component-tester -p 3001 server-config.json",
        "_generateDocs": "polymer analyze ./dist/components/*.js > ./dist/components/analysis.json"
    },
    "keywords": [],
    "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
    "license": "GPL-3.0-or-later",
    "dependencies": {
        "@hmh-cam/component-base": "latest"
    },
    "devDependencies": {
        "@hmh-cam/component-tester": "latest",
        "@hmh-cam/nodejs-base-server": "latest",
        "@polymer/iron-component-page": "latest",
        "@polymer/iron-demo-helpers": "latest",
        "@types/chai": "latest",
        "@types/mocha": "latest",
        "@types/sinon": "latest",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "concurrently": "latest",
        "eslint": "^5.16.0",
        "npm-watch": "latest",
        "polymer-cli": "latest",
        "prettier": "^1.18.2",
        "sinon": "latest",
        "typescript": "latest",
        "typescript-styled-plugin": "latest"
    },
    "watch": {
        "_generateDocs": "src/**/*"
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": [
                0
            ],
            "@typescript-eslint/no-object-literal-type-assertion": [
                0
            ]
        }
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 160,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}
